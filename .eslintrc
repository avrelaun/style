{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "globals": {
        "module": true,
        "require": true,
        "define": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true,
        "modules": true
    },
    "rules": {
        "no-compare-neg-zero": 2,
        "no-console": 1,
        "no-debugger": 1,
        "no-extra-parens": 1,
        "no-extra-semi": 2,
        "no-irregular-whitespace": 2,
        "no-template-curly-in-string": 1,
        "block-scoped-var": 1,
        "consistent-return": 2,
        "curly": 1,
        "default-case": 2,
        "dot-location": [1, "property"],
        "dot-notation": 1,
        "eqeqeq": [2, "smart"],
        "no-alert": 1,
        "no-caller": 2,
        "no-empty-function": 1,
        "no-eval": 2,
        "no-extra-bind": 1,
        "no-extra-label": 1,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-magic-numbers": [1, { "ignore": [0,1], "ignoreArrayIndexes": true }],
        "no-multi-spaces": 1,
        "no-multi-str": 0,
        "prefer-promise-reject-errors": 1,
        "no-self-compare": 2,
        "no-useless-call": 1,
        "no-useless-escape": 1,
        "no-useless-return": 1,
        "no-warning-comments": [1, { "location": "anywhere" }],
        "yoda": 1,
        "no-label-var": 2,
        "no-unused-vars": [1, {
            "vars": "all",
            "args": "after-used"
        }],
        "block-spacing": 1,
        "camelcase": [2, {
            "properties": "never"
        }],
        "comma-style": 1,
        "eol-last": [2, "always"],
        "indent": [2, "tab", { "SwitchCase": 1 }],
        "linebreak-style": [2, "unix"],
        "max-depth": [1, { "max": 4 }],
        "max-len": [2, 120, 4],
        "max-lines": [1, { "max": 999 }],
        "max-statements": [1, 25],
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [1, {
            "max": 2,
            "maxBOF": 0,
            "maxEOF": 1
        }],
        "no-negated-condition": 1,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 0,
        "no-whitespace-before-property": 2,
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "spaced-comment": [1, "always"],
        "arrow-parens": 2,
        "no-duplicate-imports": 2
    }
}
